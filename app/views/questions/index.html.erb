<dl class="filters">
  <dt>Filter posts</dt>

  <dd><%= link_to t("filter.all"), questions_path %></dd>
  <dd><%= link_to t("filter.unanswered"), questions_path(:filter => QuestionFilter::UNANSWERED) %></dd>
